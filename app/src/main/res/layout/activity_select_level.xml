<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:theme="@style/LoginTheme"
    tools:context=".SelectLevelActivity" >


    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:elevation="3dp"
        android:layout_marginStart="16dp"
        android:id="@+id/backB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_back"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:src="@drawable/app_logo"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="@string/app_name"/>

</LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/ch_le"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="יש לבחור את הרמה הנדרשת : "
        android:textStyle="bold"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_marginTop="64dp"
        android:elevation="5dp"
        android:id="@+id/amateurB"
        android:stateListAnimator="@null"
        android:background="@drawable/round_corner_button"
        android:text="1-10"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch_le"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_marginTop="64dp"
        android:elevation="5dp"
        android:id="@+id/proB"
        android:background="@drawable/round_corner_button"
        android:text="10-100"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amateurB"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_marginTop="64dp"
        android:elevation="5dp"
        android:id="@+id/legendB"
        android:background="@drawable/round_corner_button"
        android:text="100-1000"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@+id/proB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        />

</androidx.constraintlayout.widget.ConstraintLayout>